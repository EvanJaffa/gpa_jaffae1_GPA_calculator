<?xml version="1.0" encoding="utf-8"?>

    <!-- Parent Layout - a LinearLayout of vertical type -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:text="@string/quickGPA"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="26dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/purple_500"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />


    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:singleLine="true"
            android:text="@string/course_name_header"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_gravity="right"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.15"
            android:text="@string/grade_header"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.15"
            android:text="@string/credits_header"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center" />



    </LinearLayout>

    <!-- First Child content Layout - a LinearLayout of horizontal type -->
    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Child views -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:text="Course 1"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/gradeText1"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/grade_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/creditText1"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/credits_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="number"/>

    </LinearLayout>
    <!-- Second Child Layout - a LinearLayout of horizontal type
    containing its own EditText and TextView-->
    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Child views -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:text="Course 2"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"    />

        <EditText
            android:id="@+id/gradeText2"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/grade_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/creditText2"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/credits_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Child views -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:text="Course 3"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"    />

        <EditText
            android:id="@+id/gradeText3"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/grade_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/creditText3"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/credits_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Child views -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:text="Course 4"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"    />

        <EditText
            android:id="@+id/gradeText4"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/grade_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/creditText4"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/credits_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Child views -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:text="Course 5"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"    />

        <EditText
            android:id="@+id/gradeText5"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/grade_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/creditText5"
            android:layout_width="0dp"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_weight="1.15"
            android:background="@color/exitTextBackground"
            android:hint="@string/credits_header"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- Child views -->


        <Button
            android:id="@+id/calculateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@color/greenColor"
            android:text="Calculate"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/resultsTextLayout"
        android:layout_marginTop="15dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/results_prefix"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/resultText"
            style="@style/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_layout_view_layoutHeight"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text=""
            android:textSize="26dp" />

    </LinearLayout>


    </LinearLayout>





